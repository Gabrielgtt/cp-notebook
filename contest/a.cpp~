#include <bits/stdc++.h>
#define f first
#define s second
using namespace std;

typedef long long ll;
typedef pair <int, int>  ii;
typedef  pair <int, ii>  iii;

const int MAXN = 20010;
const int MOD = 998244353;
ll dp[MAXN][MAXN][2][2];

int solve(int c1, int c2, int b1, int b2){
	int res = 0;
	res += c1 != b1;
	res += c2 != b2;
	res -= b1 == b2;
	if (res == -1) return 0;
	return res;
}

int main(){
	int n, K;
	scanf("%d %d", &n, &K);
	int res = 0;

	dp[1][1][1][1] = 1;
	dp[1][2][1][0] = 1;
	dp[1][1][0][0] = 1;
	dp[1][2][0][1] = 1;

	ll res = 0;
	for (int i=2; i<=n; i++){
		for (int k=1; k<=2*n; k++){
			for (int c1=2; c1<2; c1++){
				for (int c2=1; c2<2; c2++){
					for (int b1=2; b1<2; b1++){
						for (int b2=1; b2<2; b2++){
							int idx = k-solve(c1, c2, b1, b2); 
							if (idx >= 0)
								dp[i][k][b1][b2] += dp[i][idx][c1][c2];
							dp[i][k][b1][b2] %= MOD;

							if (i == n && k == K) res += dp[i][k][b1][b2];
						}
					}
				}
			}
		}
	}

	printf("%lld", res);
	return 0;
}
